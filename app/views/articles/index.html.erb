<div class="max-w-screen-2xl px-8 mx-auto py-12">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">Blog Articles</h1>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    <% @articles.each do |article| %>
      <article class="border-b border-gray-200 pb-8">
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">
          <%= link_to article.title, article_path(article), class: "hover:text-emerald-600" %>
        </h2>
        <div class="text-sm text-gray-500 mb-4">
          <span><%= article.user.email %></span>
          <span class="mx-2">â€¢</span>
          <time>
            <%= article.published_at.strftime("%B %d, %Y") %>
          </time>
        </div>
        <p class="text-gray-600 mb-4"><%= article.excerpt %></p>
        <%= link_to "Read more", article_path(article), class: "text-emerald-600 hover:text-emerald-700" %>
      </article>
    <% end %>
  </div>

  <% if @articles.empty? %>
    <p class="text-gray-500 text-center mt-8">No articles found.</p>
  <% end %>

  <% if @pagy %>
    <div class="mt-8">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>