<div class="max-w-screen-xl px-8 mx-auto py-12">
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
    <% @articles.each do |article| %>
      <article class="pb-8">
        <% if article.cover.attached? %>
          <%= image_tag article.cover, class: "w-full h-48 object-cover rounded-lg mb-4" %>
        <% else %>
          <div class="w-full h-48 bg-gradient-to-b from-gray-100 to-gray-200 rounded-lg mb-4"></div>
        <% end %>
        <h2 class="text-xl font-semibold text-gray-900 mb-2">
          <%= link_to article.title, article_path(article), class: "hover:text-black" %>
        </h2>
        <div class="text-sm text-gray-500 mb-4">
          <span><%= article.user.username %></span>
          <span class="mx-2">â€¢</span>
          <time>
            <%= article.published_at.strftime("%B %d, %Y") %>
          </time>
        </div>
        <p class="text-gray-600 mb-4"><%= article.excerpt %></p>
        <%= link_to "Read more", article_path(article), class: "text-emerald-600 hover:text-emerald-700" %>
      </article>
    <% end %>
  </div>

  <% if @articles.empty? %>
    <p class="text-gray-500 text-center mt-8">No articles found.</p>
  <% end %>

  <% if @pagy %>
    <div class="mt-8">
      <%== pagy_nav(@pagy) %>
    </div>
  <% end %>
</div>