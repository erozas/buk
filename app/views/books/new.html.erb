<div class="max-w-2xl mx-auto p-6">
  <h1 class="text-3xl font-bold text-gray-900 mb-6">Create New Book</h1>

  <%= form_with(model: @book, local: true, class: "space-y-6") do |form| %>
    <div>
      <%= form.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :title, class: "py-1.5 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-emerald-500 focus:ring focus:ring-emerald-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :isbn, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :isbn, class: "py-1.5 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-emerald-500 focus:ring focus:ring-emerald-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :author_name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :author_name, class: "py-1.5 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-emerald-500 focus:ring focus:ring-emerald-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :excerpt, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :excerpt, rows: 3, class: "py-1.5 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-emerald-500 focus:ring focus:ring-emerald-200 focus:ring-opacity-50" %>
    </div>

    <div>
      <%= form.label :description, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_area :description, rows: 5, class: "py-1.5 mt-1 block w-full rounded-md border border-gray-300 shadow-sm focus:border-emerald-500 focus:ring focus:ring-emerald-200 focus:ring-opacity-50" %>
    </div>

    <div class="flex items-center justify-between">
      <%= form.submit "Create Book", class: "px-4 py-2 bg-emerald-600 text-white rounded-md hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-emerald-500 transition duration-150 ease-in-out" %>
      <%= link_to "Cancel", books_path, class: "px-4 py-2 bg-gray-200 text-gray-700 rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition duration-150 ease-in-out" %>
    </div>
  <% end %>
</div>