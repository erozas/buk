<%= render "shared/schema", schema: @faq_schema %>

<div class="bg-white min-h-screen py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-extrabold text-gray-900 mb-8">
      Frequently Asked Questions
    </h1>
    
    <% @faqs.each do |faq| %>
      <div class="bg-white p-6 border-b border-neutral-200">
        <h2 class="text-xl font-semibold text-emerald-700 mb-4"><%= faq['question'] %></h2>
        <p class="text-gray-600"><%= faq['answer'] %></p>
      </div>
    <% end %>

    <div class="mt-12">
      <p class="text-base text-gray-500">
        Can't find the answer you're looking for? 
        <a href="#" class="font-medium text-emerald-600 hover:text-emerald-500">
          Contact our support team
        </a>
      </p>
    </div>
  </div>
</div>