      <%= link_to "Sign up", new_user_registration_path, class: "bg-emerald-500 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Sign in", new_user_session_path, class: "bg-emerald-500 hover:bg-emerald-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
  </div>